def vigenere_cipher(text, key, mode="encrypt"):
    result = ""
    key = key.lower()
    key_index = 0
    key_length = len(key)

    for char in text:
        if char.isalpha():
            shift = ord(key[key_index % key_length]) - 97

            if char.isupper():
                base = 65
            else:
                base = 97

            if mode == "encrypt":
                result += chr((ord(char) - base + shift) % 26 + base)
            elif mode == "decrypt":
                result += chr((ord(char) - base - shift) % 26 + base)

            key_index += 1
        else:
            result += char  # keep spaces, numbers, punctuation unchanged
    return result

# Main program
text = input("Enter message: ")
key = input("Enter key (alphabet only): ")
mode = input("Do you want to encrypt or decrypt? ").lower()

result = vigenere_cipher(text, key, mode)
print(f"{mode.capitalize()}ed Text:", result)
